<header>
    <!-- Logo -->
    <div class="logo">
        Gene<span>Analyzer</span>
    </div>

    <!-- Navigation Links -->
    <nav>
        <ul class="nav-links">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/analysis">Analysis</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/signin" class="btn-secondary">Sign In</a></li>
            <li><a href="/signup" class="btn-primary">Sign Up</a></li>
        </ul>
    </nav>

</header>
<section class="analysis-hero">
    <div class="analysis-container">
        <h1>PharmaGuard Analysis</h1>
        <p>
            Upload your validated genetic data to receive AI-powered
            pharmacogenomic risk predictions and clinical guidance.
        </p>
    </div>
</section>

<section class="upload-section">

    <div class="upload-card">
        <h2>Upload Genetic File</h2>
        <p>
            Supported format: VCF (Variant Call Format)
        </p>

        <form action="/analysis" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="geneticFile">Select VCF File</label>
                <input type="file" id="geneticFile" name="geneticFile" required>
            </div>

            <div class="form-group">
                <label for="drugSelect">Select Drug</label>
                <select id="drugSelect" name="drug">
                    <option value="codeine">Codeine</option>
                    <option value="warfarin">Warfarin</option>
                    <option value="clopidogrel">Clopidogrel</option>
                    <option value="simvastatin">Simvastatin</option>
                </select>
            </div>

            <button type="submit" class="btn-main">Run Analysis</button>
        </form>
    </div>

</section>

<section class="results-section">
    <div class="results-card">
        <h2>Analysis Results</h2>
        <p>
            Once the file is processed, personalized drug safety
            recommendations will appear here.
        </p>

        <div class="result-placeholder">
            <p>No analysis performed yet.</p>
        </div>
    </div>
</section>

<footer>
    <p>PharmaGuard • Precision Medicine Intelligence Platform</p>
</footer>

<script>
    const form = document.querySelector('form');
    const fileInput = document.getElementById('geneticFile');

    form.addEventListener('submit', function(e) {
        const file = fileInput.files[0];
        if (file) {
            const fileName = file.name;
            const fileExtension = fileName.split('.').pop().toLowerCase();

            if (fileExtension !== 'vcf') {
                e.preventDefault(); // Stop form submission
                alert('Invalid file type! Please upload a VCF file.');
            }
        } else {
            e.preventDefault();
            alert('Please select a file.');
        }
    });
</script>
